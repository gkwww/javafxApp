<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<fx:root type="ldh.fx.component.LdhWindow" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox fx:id="headPane" styleClass="head-pane" prefHeight="30">
            <children>
                <HBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="title" text="Flat Win" HBox.hgrow="ALWAYS">
                            <graphic><MaterialDesignIconView styleClass="window-graphic"/></graphic>
                        </Label>
                    </children>
                </HBox>
                <Label onMouseClicked="#maximize" styleClass="max-button" text="m" prefWidth="15" alignment="CENTER" contentDisplay="GRAPHIC_ONLY">
                    <graphic><MaterialDesignIconView styleClass="window-max-graphic"/></graphic>
                </Label>
                <Label onMouseClicked="#minimize" styleClass="min-button" text="_" prefWidth="15" alignment="CENTER" contentDisplay="GRAPHIC_ONLY">
                    <graphic><MaterialDesignIconView styleClass="window-min-graphic"/></graphic>
                </Label>
                <Label onMouseClicked="#close" styleClass="close-button" text="X" prefWidth="15" alignment="CENTER" contentDisplay="GRAPHIC_ONLY">
                    <graphic><MaterialDesignIconView styleClass="window-close-graphic"/></graphic>
                </Label>
            </children>
        </HBox>
    </top>
</fx:root>
